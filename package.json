{
  "name": "react-native-dynamic-activities",
  "version": "0.1.0",
  "description": "react-native-dynamic-activities is a react native package built with Nitro Modules to allow you easily integrate Live Activities into your react-native app",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -dfX",
    "release": "release-it",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "lint-ci": "eslint \"**/*.{js,ts,tsx}\" -f @jamesacarr/github-actions",
    "build": "bun run typecheck && bob build",
    "codegen": "nitro-codegen --logLevel=\"debug\" && bun run build && node post-script.js",
    "postcodegen": "bun --cwd example pod",
    "prepare": "husky"
  },
  "keywords": [
    "react-native",
    "react-native-dynamic-activities",
    "live-activities",
    "activity-kit",
    "alarm-kit",
    "widget-kit",
    "nitro-modules",
    "nitro"
  ],
  "files": [
    "src",
    "react-native.config.js",
    "lib",
    "nitrogen",
    "cpp",
    "android/build.gradle",
    "android/gradle.properties",
    "android/CMakeLists.txt",
    "android/src",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "ios/**/*.swift",
    "app.plugin.js",
    "*.podspec",
    "README.md"
  ],
  "workspaces": [
    "example",
    "docs"
  ],
  "repository": "https://github.com/pieczasz/react-native-dynamic-activities.git",
  "author": "Pieczasz",
  "license": "MIT",
  "bugs": "https://github.com/pieczasz/react-native-dynamic-activities/issues",
  "homepage": "https://github.com/pieczasz/react-native-dynamic-activities#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@react-native/eslint-config": "0.79.3",
    "@react-native/metro-config": "^0.80.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "commitlint": "^19.8.1",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nitro-codegen": "^0.26.3",
    "prettier": "^3.3.3",
    "react": "19.1.0",
    "react-native": "0.80.0",
    "react-native-builder-bob": "^0.37.0",
    "react-native-nitro-modules": "^0.26.3",
    "release-it": "^19.0.3",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.4.0",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "npm": {
      "publish": true
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": true
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:release": "bun i && bun typescript"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  }
}
