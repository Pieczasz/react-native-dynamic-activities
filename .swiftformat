#############################################
# SwiftFormat â€“ Industry-Standard Preferences
#############################################

# Core style
--indent 4
--allman false
--maxwidth 120
--linebreaks lf
--swiftversion 5.7

# Wrapping
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first
--wrapreturntype if-multiline
--wrapconditions before-first

# Spacing & tokens
--commas inline
--semicolons never
--ranges no-space
--operatorfunc spaced
--typeattributes prev-line
--self init-only
--patternlet inline
--trimwhitespace nonblank-lines
--stripunusedargs closure-only
--importgrouping testable-first
--extensionacl on-declarations
--header strip
--conflictmarkers reject
--fragment false

# Rule toggles (focused, common set)
--enable isEmpty
--enable trailingCommas
--enable blankLinesBetweenScopes
--enable blankLinesBetweenImports
--enable consecutiveBlankLines
--enable markTypes
--enable redundantSelf
--disable redundantType
--disable wrapMultilineStatementBraces

# Exclusions (generated/build/vendor)
--exclude nitrogen/generated,example/ios/Pods,ios/Pods,docs,example/vendor/bundle
